set $mod Mod4

# Font for window titles.
font pango:URW Gothic Book 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec terminator

# Move focused workspace to monitor
bindsym $mod+Control+Left move workspace to output left
bindsym $mod+Control+Up move workspace to output up
bindsym $mod+Control+Down move workspace to output down
bindsym $mod+Control+Right move workspace to output right

# kill focused window
bindsym $mod+Shift+q kill

# start a program launcher
bindsym $mod+d exec --no-startup-id rofi -show run
bindsym $mod+q exec --no-startup-id rofi -show
bindsym $mod+p exec --no-startup-id ~/scripts/lpass-menu.sh

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+c split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+Tab focus parent

# focus the child container
bindsym $mod+Shift+Tab focus child

# switch to workspace
workspace_auto_back_and_forth yes
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exit

# resize window
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt

        bindsym k resize grow height 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt

        bindsym j resize shrink height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt

        bindsym l resize grow  width 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

#Sound's keybinding
bindsym XF86AudioRaiseVolume exec amixer sset Master 1%+
bindsym XF86AudioLowerVolume exec amixer sset Master 1%-
bindsym XF86AudioMute exec amixer sset Master toggle

#Binding media keys
bindsym XF86AudioPlay exec playerctl play-pause  
bindsym XF86AudioNext exec playerctl next  
bindsym XF86AudioPrev exec playerctl previous 

#Custom shortcuts
bindsym Print exec teiler --quickcopy area 
bindsym $mod+z exec rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'
bindsym $mod+shift+p exec lpu
bindsym $mod+n exec ~/scripts/lock.sh
bindsym $mod+o exec ~/scripts/rofi_notes.sh
bindsym $mod+l exec ~/scripts/web-search.sh
bindsym $mod+Control+l exec ~/.config/polybar/launch.sh
bindsym $mod+Control+n exec nautilus
bindsym $mod+Control+c exec google-chrome-stable
bindsym $mod+Control+p exec ~/.wallpaper/wall_3_2
bindsym $mod+Alt+p exec ~/.wallpaper/wall_3
bindsym $mod+x exec teiler --quick video area
bindsym $mod+Control+a scratchpad show

#Startup
exec --no-startup-id compton --config ~/.compton.conf        
exec --no-startup-id discord
exec --no-startup-id slack
exec --no-startup-id albert
exec --no-startup-id thunderbird
exec --no-startup-id greenclip daemon
exec --no-startup-id unclutter --timeout 1 --fork  
exec --no-startup-id ~/scripts/auto_xrandr_daemon.py start
exec --no-startup-id rescuetime

#System shortcuts.
bindsym $mod+Control+Shift+s exec shutdown -h now
bindsym $mod+Control+Shift+a exec reboot

#Add a terminal in the scratchpad
exec --no-startup-id terminator -p scratchpad -l KJ -T "scratch-terminal"
for_window [title="scratch-terminal"] move scratchpad, resize set width 1000 px, resize set height 1000 px;
bindsym Mod4+t [title="scratch-terminal"] scratchpad show

#Vtop in scratchpad
for_window [instance="terminator" title="F1"] resize grow left 100, resize grow right 100, resize grow up 100, move scratchpad;
exec --no-startup-id terminator -l KJ -T "F1" -e "vtop -t brew"
bindsym Mod1+F1 [title="F1"] scratchpad show

#Pavucontrol in scratchpad
for_window [class="Pavucontrol"] move scratchpad
exec --no-startup-id pavucontrol
bindsym Mod1+F2 [class="Pavucontrol"] scratchpad show

#Htop in scratchpad
for_window [instance="terminator" title="F3"] resize grow left 100, resize grow right 100, resize grow up 100, move scratchpad;
exec --no-startup-id terminator -p scratchpad -l KJ -T "F3" -e "htop"
bindsym Mod1+F3 [instance="terminator" title="F3"] scratchpad show

#ARandr in scratchpad
for_window [class="Arandr"] move scratchpad
exec --no-startup-id arandr
bindsym Mod1+F4 [class="Arandr"] scratchpad show

#Vim cheat sheet in scratchpad
for_window [title="(?)vim-cheat-sheet.gif"] move scratchpad
exec --no-startup-id viewnior ~/Images/vim-cheat-sheet.gif
bindsym Mod1+v [title="(?)vim-cheat-sheet.gif"] scratchpad show

#Toggl in scratchpad
for_window [title="Toggl Desktop"] move scratchpad
exec --no-startup-id toggldesktop
bindsym $mod+g [title="Toggl Desktop"] scratchpad show

#Spotify in scratchpad
for_window [class="Spotify"] move scratchpad, resize set width 1000 px, resize set height 1000 px;
exec --no-startup-id spotify
bindsym $mod+a [class="Spotify"] scratchpad show

#Set some windows as floating
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [class="(?i)qemu-system"] floating enable
for_window [class="(?i)VirtualBox" title="(?i)Manager"] floating enable
for_window [class="(?i)VirtualBox"] floating enable
for_window [class="(?i)blueman"] floating enable
for_window [class="(?i)nm-connection-editor"] floating enable
for_window [class="(?i)pinentry"] floating enable
for_window [title="(?i)Drawer"] floating enable
for_window [class="(?i)Google-chrome" title="(?)devtools"] floating disable

#Insta-kill 
for_window [title="(?i)Zoom Cloud Meetings"] kill

#Set windows' borders
hide_edge_borders both
for_window [class=".*"] border pixel 3
for_window [class="(?i)Google-chrome"] border pixel 0
for_window [class="(?i)albert"] border pixel 0
for_window [class="(?i)terminator"] border pixel 0
for_window [class="(?i)termite"] border pixel 0
for_window [class="(?i)urxvt"] border pixel 0

#Set colors
set_from_resource $bg           i3wm.color0 #ff0000
set_from_resource $bg-alt       i3wm.color14 #ff0000
set_from_resource $fg           i3wm.color15 #ff0000
set_from_resource $fg-alt       i3wm.color2 #ff0000
set_from_resource $hl           i3wm.color13 #ff0000

#Border
# class                 border      backgr. text indicator      child_border
client.focused          $fg         $bg     $fg  $fg-alt        $bg
client.focused_inactive $bg         $bg     $fg  $fg-alt        $fg-alt
client.unfocused        $bg         $bg     $fg  $fg-alt        $fg-alt
client.urgent           $fg-alt     $fg-alt $fg  $fg-alt        $fg-alt
client.placeholder      $fg-alt     $bg     $fg  $fg-alt        $fg-alt
client.background $bg

#Set gaps
gaps inner 6
gaps outer 0

