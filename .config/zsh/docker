alias dck="docker"
alias dcps="docker ps"
alias dckc="docker compose"
alias dckcr="docker compose run --rm"
alias drpym="docker compose run --rm django python manage.py"
alias drblack="docker compose run --rm django black ."
alias drmigrate="docker compose run --rm django python manage.py makemigrations && sudo chown blaprise:blaprise tchatnsign/migrations/* && docker compose run django black ."
alias drpopulate="docker compose down -v && drpym migrate && docker compose run --rm django python -W ignore manage.py populate_db"
